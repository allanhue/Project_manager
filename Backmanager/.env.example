APP_ENV=dev
PORT=8080

# Neon PostgreSQL
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DBNAME?sslmode=require&channel_binding=require

# Optional fallback
psql=postgresql://USER:PASSWORD@HOST/DBNAME?sslmode=require&channel_binding=require

# Pool tuning
DB_MAX_CONNS=15
DB_MIN_CONNS=2
DB_MAX_CONN_IDLE_MIN=15
DB_MAX_CONN_LIFE_MIN=60

# JWT auth
JWT_SECRET=change-me-to-very-long-random-secret
JWT_ISSUER=backmanager
JWT_TTL_HOURS=24

# CORS (comma separated)
CORS_ALLOW_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Origin,Content-Type,Authorization
